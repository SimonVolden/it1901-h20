<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="607.0" prefWidth="280.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="treningsapp.ui.WorkoutSceneController">
   <children>
      <AnchorPane maxHeight="-1.0" maxWidth="-1.0" prefHeight="560.0" prefWidth="1218.0" style="-fx-background-color: #007BFF;" VBox.vgrow="ALWAYS">
         <children>
            <Button fx:id="backButton" mnemonicParsing="false" onAction="#handleBack" prefHeight="19.0" prefWidth="52.0" text="Back">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Label alignment="CENTER" layoutX="45.0" layoutY="25.0" prefHeight="37.0" prefWidth="190.0" text="WORKOUT">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
            </Label>
            <TextField fx:id="workoutExerciseName" alignment="CENTER" editable="false" layoutX="22.0" layoutY="68.0" prefHeight="42.0" prefWidth="238.0">
               <font>
                  <Font size="17.0" />
               </font>
            </TextField>
            <Button fx:id="addSetButton" layoutX="205.0" layoutY="132.0" mnemonicParsing="false" onAction="#addSet" prefHeight="25.0" prefWidth="60.0" text="Add set">
               <font>
                  <Font name="System Bold" size="10.0" />
               </font>
            </Button>
            <ScrollPane fx:id="exerciseScrollPane" layoutX="6.0" layoutY="232.0" prefHeight="202.0" prefWidth="268.0">
              <content>
                <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="200.0" prefWidth="261.0" />
              </content>
            </ScrollPane>
            <Spinner fx:id="repSpinner" layoutX="96.0" layoutY="132.0" prefHeight="25.0" prefWidth="89.0" />
            <TextField editable="false" layoutX="23.0" layoutY="132.0" prefHeight="25.0" prefWidth="60.0" text="Reps" />
            <TextField editable="false" layoutX="23.0" layoutY="176.0" prefHeight="25.0" prefWidth="60.0" text="Weight" />
            <Spinner fx:id="weightSpinner" layoutX="96.0" layoutY="176.0" prefHeight="25.0" prefWidth="89.0" />
            <Button  fx:id="nextExercise" layoutX="180.0" layoutY="499.0" mnemonicParsing="false" onAction="#handleNextExercise" text="Next Exercise" />
            <Button fx:id="lastExercise" layoutX="11.0" layoutY="499.0" mnemonicParsing="false" onAction="#handleLastExercise" text="Last Exercise" />
            <Button fx:id="workoutDoneButton" layoutX="67.0" layoutY="551.0" mnemonicParsing="false" onAction="#handleWorkoutDone" prefHeight="42.0" prefWidth="146.0" text="Workout Done">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
            </Button>
            <Button fx:id="removeSetButton" layoutX="205.0" layoutY="176.0" mnemonicParsing="false" onAction="#removeSet" prefHeight="25.0" prefWidth="60.0" text="Remove">
               <font>
                  <Font name="System Bold" size="10.0" />
               </font>
            </Button>
         </children>
      </AnchorPane>
   </children>
</VBox>
